#include <stdio.h>
#include <stdlib.h>

/*C program to find SUM and AVERAGE of two integer Numbers using User Defined Functions*/

int sum(int a, int b) {
	int i;
	i = a + b;
	return i;
}

float average(int a, int b) {
	float j;
	return ((float)(a)+(float)(b)) / 2;
}

int main() {
	int x, y;
	int add;
	float avg;
	printf("Enter 1st number: ");
	scanf("%d", &x);
	printf("\n");
	printf("Enter 2nd number: ");
	scanf("%d", &y);
	printf("\n");
	add = sum(x, y);
	avg = average(x, y);
	printf("The SUM of the two integers is %d", add);
	printf("\n");
	printf("The AVERAGE of the two integers is %f", avg);
	printf("\n");

	return 0;
}
